<?xml version="1.0" encoding="utf-8"?>
<com.amar.library.ui.StickyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:stickyHeader="@id/header">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header"
            android:orientation="horizontal"
            android:background="@drawable/bg">

            <Button
                android:id="@+id/bckbtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ic_action_name" />

            <TextView
                android:id="@+id/headertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/test"
                android:text="MY PROFILE"
                android:textColor="#fff"
                android:paddingLeft="15dp"
                android:textSize="35dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="138dp"
                android:layout_height="180dp"
                app:srcCompat="@drawable/profilepic"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/nim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/btnfont"
                android:textColor="#fff"
                android:textSize="20dp"
                android:text="NIM : 00000029346"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/btnfont"
                android:textColor="#fff"
                android:textSize="20dp"
                android:text="Nama : Kevin Bobby"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/kelas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/btnfont"
                android:textColor="#fff"
                android:textSize="20dp"
                android:text="Kelas : CL"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/referensi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/test"
                android:layout_marginTop="25dp"
                android:textColor="#fff"
                android:textSize="25dp"
                android:text="REFERENSI"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/youtube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/btnfont"
                android:layout_marginTop="5dp"
                android:textColor="#fff"
                android:textSize="20dp"
                android:text="Youtube"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/youtube1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/btnfont"
                android:textColorLink="#fff"
                android:textSize="15dp"
                android:text="@string/youtube1"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/youtube2"
